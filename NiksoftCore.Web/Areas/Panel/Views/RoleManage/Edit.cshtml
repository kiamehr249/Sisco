
@model NiksoftCore.ViewModel.RoleRequest
@{
    ViewData["Title"] = "ایجاد نقش";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
    var Messages = (List<NiksoftCore.ViewModel.NikMessage>)ViewBag.Messages;
}

<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/RoleManage" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
<br />

@Html.ValidationSummary()
<form action="/Panel/RoleManage/Edit" method="post">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="form-group">
                    <label for="txtName" class="control-label">عنوان نقش</label>
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "عنوان", @class = "form-control", @id = "txtName" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                @Html.HiddenFor(x => x.Id, new { value = Model.Id })
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>

    $(document).ready(function () {

        @if (Messages != null)
        {
            @foreach (var item in Messages)
            {
                if (item.Type == NiksoftCore.ViewModel.MessageType.Error)
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'error'
                    });
                    </text>
                }
                else
                {
                    <text>
                    showMessage({
                        text: '@item.Message',
                        type: 'success'
                    });
                    </text>
                }
            }
        }


    });
</script>