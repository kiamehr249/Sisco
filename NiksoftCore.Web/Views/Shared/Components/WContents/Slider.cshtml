@using NiksoftCore.DataModel
@{
    var contents = (List<GeneralContent>)ViewBag.Contents;
}
@if (contents.Count > 0)
{
    <div class="hero-main mercury-layout white-sec" style="background: url('/templates/TraderFace/images/banner-6.jpg');">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-sm-12 col-md-6" data-wow-delay="0.5s">
                    <div class="mercury-animation">
                        <div class="numbers">
                            <div class="number-one"></div>
                            <div class="number-two"></div>
                        </div>
                        <div id="earth-box-cover">
                            <div class="earth-icons">
                                <i class="icon-1"></i>
                                <i class="icon-2"></i>
                                <i class="icon-3"></i>
                                <i class="icon-4"></i>
                                <i class="icon-5"></i>
                                <i class="icon-6"></i>
                                <i class="icon-7"></i>
                            </div>
                            <div id="earth-box">
                                <span></span>
                            </div>
                        </div>
                        <!-- <div class="earth">
                            <img src="images/mercury-earth.png" alt="">
                        </div> -->
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <h1>@contents.Last().Title</h1>
                    <p class="lead">@contents.Last().Header</p>
                    <div class="hero-btns">
                        <a href="#" class="btn btn-danger">Buy Now</a>
                        <a href="#token" class="btn btn3">Tokens Distribution</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
